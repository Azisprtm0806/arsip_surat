<div
  class="tab-pane fade show active"
  id="show-detailSurat"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <form>
            <fieldset disabled>
              <div class="form-group">
                <label for="name" class="text-uppercase">Tanggal</label>
                <div class="card border-left-success shadow">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-sm font-weight-bold">
                          <%= surat.tanggal %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="name" class="text-uppercase">No Surat</label>
                <div class="card border-left-success shadow">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-sm font-weight-bold">
                          <%= surat.nomerSurat %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="name" class="text-uppercase">Perihal</label>
                <div class="card border-left-success shadow">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-sm font-weight-bold">
                          <%= surat.perihal %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
        <div class="col-md-6">
          <form>
            <fieldset disabled>
              <div class="form-group">
                <label for="name" class="text-uppercase">Tujuan</label>
                <div class="card border-left-success shadow">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-sm font-weight-bold">
                          <%= surat.tujuan %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="name" class="text-uppercase">Keterangan</label>
                <div class="card border-left-success shadow">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-sm font-weight-bold">
                          <%= surat.keterangan %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="card shadow mb-4">
    <div class="card-body align-self-center">
      <embed type="application/pdf" src="http://localhost:3000/<%= surat.file %>" width="1000" height="500"></embed>
    </div>
  </div>
</div>
