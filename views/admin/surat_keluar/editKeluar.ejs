<div class="tab-pane fade" id="show-editSurat">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <form
            action="/admin/surat-keluar?_method=PUT"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Tanggal</label>
              <input
                type="text"
                class="form-control"
                value="<%= surat.tanggal %>"
                name="tanggal"
              />
            </div>
            <div class="form-group">
              <label for="name">No Surat</label>
              <input
                type="text"
                class="form-control"
                value="<%= surat.nomerSurat %>"
                name="nomerSurat"
              />
            </div>
            <div class="form-group">
              <label for="name">Perihal</label>
              <input
                type="text"
                class="form-control"
                value="<%= surat.perihal %>"
                name="perihal"
              />
            </div>
            <div class="form-group">
              <label for="name">Tujuan</label>
              <input
                type="text"
                class="form-control"
                value="<%= surat.tujuan %>"
                name="tujuan"
              />
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Example textarea</label>
              <textarea
                class="form-control"
                id="exampleFormControlTextarea1"
                rows="3"
                name="keterangan"
              >
<%= surat.keterangan %></textarea
              >
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" class="form-control" name="file" />
              <span>Pilih PDF Untuk Edit PDF</span>
            </div>
            <input
              type="hidden"
              class="form-control"
              value="<%= surat.id %>"
              name="id"
            />
            <button type="submit" class="btn btn-primary center">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
