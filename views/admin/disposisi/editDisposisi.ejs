<div class="tab-pane fade" id="show-editSurat">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <form
            action="/admin/surat-masuk/edit/disposisi/?_method=PUT"
            method="post"
          >
            <div class="form-group">
              <label for="name">Tujuan</label>
              <input
                type="text"
                class="form-control"
                value="<%= disposisi.tujuan %>"
                name="tujuan"
              />
            </div>
            <div class="form-group">
              <label for="name">Sifat</label>
              <input
                type="text"
                class="form-control"
                value="<%= disposisi.sifat %>"
                name="sifat"
              />
            </div>
            <div class="form-group">
              <label for="name">Batas Waktu</label>
              <input
                type="text"
                class="form-control"
                value="<%= disposisi.batasWaktu %>"
                name="batasWaktu"
              />
            </div>
            <input
              type="hidden"
              class="form-control"
              value="<%= disposisi.id %>"
              name="id"
            />
            <button type="submit" class="btn btn-primary center">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
