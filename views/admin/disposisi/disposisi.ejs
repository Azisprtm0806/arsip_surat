<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/surat-masuk/add/disposisi" method="post">
            <div class="form-group">
              <label for="name">Tujuan</label>
              <input
                type="text"
                class="form-control"
                name="tujuan"
                placeholder="Enter tujuan"
                required
              />
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Sifat</label>
              <select
                class="form-control"
                id="exampleFormControlSelect1"
                name="sifat"
              >
                <option>Biasa Aja</option>
                <option>Segera</option>
                <option>Sangat Segera</option>
              </select>
            </div>
            <div class="form-group">
              <label for="name">Batas Waktu</label>
              <input
                type="date"
                class="form-control"
                name="batasWaktu"
                placeholder="Enter Batas Waktu"
                required
              />
            </div>
            <input type="hidden" value="<%= masukId %>" name="masukId" />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Tujuan</th>
                  <th>Sifat</th>
                  <th>Batas Waktu</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let i = 0; i < dataDisposisi.length; i++ ) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= dataDisposisi[i].tujuan %></td>
                  <td><%= dataDisposisi[i].sifat %></td>
                  <td><%= dataDisposisi[i].batasWaktu %></td>
                  <td>
                    <div
                      class="btn-group"
                      role="group"
                      aria-label="Button group with nested dropdown"
                    >
                      <a
                        href="/admin/surat-masuk/edit/disposisi/<%= dataDisposisi[i].id %>"
                        class="btn btn-warning btn-circle btn-sm"
                        ><i class="fas fa-edit"></i
                      ></a>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
